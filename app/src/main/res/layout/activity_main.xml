<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/soignerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:onClick="soigner"
        android:text="Soigner"
        app:layout_constraintBaseline_toBaselineOf="@+id/nourrirButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/brosserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:onClick="brosser"
        android:text="Brosser"
        app:layout_constraintBaseline_toBaselineOf="@+id/nourrirButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nourrirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="51dp"
        android:onClick="nourrir"
        android:text="Nourrir"
        app:layout_constraintBottom_toTopOf="@+id/lecturebutton"
        app:layout_constraintStart_toEndOf="@+id/soignerButton" />

    <Button
        android:id="@+id/creerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:onClick="creer"
        android:text="Creer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lecturebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="266dp"
        android:onClick="lecture"
        android:text="Lecture"
        app:layout_constraintStart_toStartOf="@+id/nourrirButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="36dp"
        android:onClick="deconnexion"
        android:text="@string/d_connexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecturebutton" />


</androidx.constraintlayout.widget.ConstraintLayout>